{
  "compilerOptions": {
    "target": "es5", // atau "es2015" jika ingin menggunakan fitur ES2015
    "module": "commonjs",
    "lib": ["es2015", "dom"], // Tambahkan 'es2015' di sini
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
